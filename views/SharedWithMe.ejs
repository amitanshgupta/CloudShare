<%- include("includes/header", {
   "title": "Shared with me"
}) %>

<div class="container" style="margin-top: 50px; margin-bottom: 50px;">
    <div class="row">
        <div class="col-md-12">
            <h2>Shared With Me</h2>
        </div>
    </div>

    <% if (sharedFiles && sharedFiles.length > 0) { %>
        <div class="row">
            <% sharedFiles.forEach(function (file) { %>
                <div class="col-md-4" style="margin-top: 30px;">
                    <div class="card">
                        <div class="card-body" style="font-size: 100px; text-align: center; height: 200px;">
                            <i class="fa fa-file"></i>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-12">
                                    <h5><%= file.name %></h5>
                                    <small>Shared by: <%= file.sharedBy %></small><br>
                                    <small>Size: <%= (file.size / 1024).toFixed(2) %> KB</small>
                                </div>
                                <div class="col-md-12" style="margin-top: 10px;">
                                    <a href="<%= request.mainURL %>/DownloadSharedFile/<%= file._id %>" 
                                        class="btn btn-success btn-block">
                                        Download
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p>No files have been shared with you yet.</p>
    <% } %>
</div>

<%- include("includes/footer") %>
